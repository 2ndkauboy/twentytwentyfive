{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Noon",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#F8F7F5",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#191919",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#FFFFFF",
					"name": "Accent 1",
					"slug": "accent-1"
				},
				{
					"color": "#F5B684",
					"name": "Accent 2",
					"slug": "accent-2"
				},
				{
					"color": "#191919",
					"name": "Accent 3",
					"slug": "accent-3"
				},
				{
					"color": "#5F5F5F",
					"name": "Accent 4",
					"slug": "accent-4"
				},
				{
					"color": "#F1EEE9",
					"name": "Accent 5",
					"slug": "accent-5"
				},
				{
					"color": "#19191933",
					"name": "Accent 6",
					"slug": "accent-6"
				}
			]
		},
		"typography": {
			"fontSizes": [
				{
					"fluid": false,
					"name": "Small",
					"size": "0.9rem",
					"slug": "small"
				},
				{
					"fluid": {
						"max": "1.3rem",
						"min": "1.2rem"
					},
					"name": "Medium",
					"size": "1rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"max": "1.6rem",
						"min": "1.3rem"
					},
					"name": "Large",
					"size": "1.38rem",
					"slug": "large"
				},
				{
					"fluid": {
						"max": "2rem",
						"min": "1.75rem"
					},
					"name": "Extra Large",
					"size": "1.75rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"max": "3.625rem",
						"min": "2.625rem"
					},
					"name": "Extra Extra Large",
					"size": "2.625rem",
					"slug": "xx-large"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"bottom": {
						"color": "var(--wp--preset--color--contrast)",
						"style": "solid"
					},
					"left": {
						"color": "var(--wp--preset--color--contrast)",
						"style": "solid"
					},
					"radius": "999px",
					"right": {
						"color": "var(--wp--preset--color--contrast)",
						"style": "solid"
					},
					"top": {
						"color": "var(--wp--preset--color--contrast)",
						"style": "solid"
					}
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				"spacing": {
					"padding": {
						"bottom": "0.6rem",
						"left": "1.6rem",
						"right": "1.6rem",
						"top": "0.6rem"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				},
				"variations": {
					"outline": {
						"shadow": "none",
						"spacing": {
							"padding": {
								"bottom": "0.6rem",
								"left": "1.6rem",
								"right": "1.6rem",
								"top": "0.6rem"
							}
						},
						"border": {
							"color": "currentColor"
						}
					}
				}
			},
			"core/code": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontStyle": "normal",
					"fontWeight": "300"
				}
			},
			"core/list": {
				"typography": {
					"lineHeight": "1.3"
				}
			},
			"core/loginout": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/post-author": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontStyle": "normal",
					"fontWeight": "300"
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontStyle": "normal",
					"fontWeight": "300"
				}
			},
			"core/post-date": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontStyle": "normal",
					"fontWeight": "300"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontStyle": "normal",
					"fontWeight": "300"
				}
			},
			"core/post-title": {
				"color": {
					"text": "var(--wp--preset--color--accent-3)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent-3)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontStyle": "normal",
					"fontWeight": "500",
					"letterSpacing": "-1px"
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--accent-3)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent-3)"
						}
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontStyle": "normal",
					"fontWeight": "500",
					"lineHeight": "1"
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontStyle": "normal",
					"fontWeight": "300"
				}
			},
			"core/query-title": {
				"color": {
					"text": "var(--wp--preset--color--accent-3)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--accent-3)"
						}
					}
				}
			},
			"core/quote": {
				"typography": {
					"fontStyle": "normal",
					"fontWeight": "300"
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontWeight": "600",
					"letterSpacing": "2.4px",
					"textTransform": "uppercase"
				}
			}
		},
		"color": {
			"text": "var:preset|color|accent-4"
		},
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--contrast)",
					"text": "var(--wp--preset--color--base)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "1.8rem"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--accent-3)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--beiruti)",
					"fontStyle": "normal",
					"fontWeight": "500",
					"letterSpacing": "-1px"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--literata)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontStyle": "normal",
			"fontWeight": "300",
			"letterSpacing": "-0.22px",
			"lineHeight": "1.5"
		},
		"variations": {
			"section-1": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--base)",
								"text": "var(--wp--preset--color--contrast)"
							},
							"border": {
								"color": "var(--wp--preset--color--base)"
							}
						}
					}
				}
			},
			"section-2": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--base)",
								"text": "var(--wp--preset--color--contrast)"
							},
							"border": {
								"color": "var(--wp--preset--color--base)"
							}
						}
					}
				}
			},
			"section-3": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--accent-2)",
								"text": "var(--wp--preset--color--contrast)"
							},
							"border": {
								"color": "var(--wp--preset--color--accent-2)"
							}
						}
					}
				}
			},
			"section-4": {
				"elements": {
					"button": {
						"color": {
							"background": "var(--wp--preset--color--accent-2)",
							"text": "var(--wp--preset--color--accent-3)"
						},
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--base)",
								"text": "var(--wp--preset--color--contrast)"
							},
							"border": {
								"color": "var(--wp--preset--color--base)"
							}
						}
					}
				}
			},
			"section-5": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--accent-2)",
								"text": "var(--wp--preset--color--contrast)"
							},
							"border": {
								"color": "var(--wp--preset--color--accent-2)"
							}
						}
					}
				}
			}
		}
	}
}
