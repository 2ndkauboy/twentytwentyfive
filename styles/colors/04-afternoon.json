{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Afternoon",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#DAE7BD",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#516028",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#EBF6D3",
					"name": "Accent 1",
					"slug": "accent-1"
				},
				{
					"color": "#C7F642",
					"name": "Accent 2",
					"slug": "accent-2"
				},
				{
					"color": "#303D10",
					"name": "Accent 3",
					"slug": "accent-3"
				},
				{
					"color": "#516028",
					"name": "Accent 4",
					"slug": "accent-4"
				},
				{
					"color": "#EBF6D3",
					"name": "Accent 5",
					"slug": "accent-5"
				},
				{
					"color": "#51602833",
					"name": "Accent 6",
					"slug": "accent-6"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"variations": {
					"outline": {
						"border": {
							"color": "currentColor"
						}
					}
				}
			}
		},
		"variations": {
			"section-1": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--accent-2)",
								"text": "var(--wp--preset--color--contrast)"
							},
							"border": {
								"color": "var(--wp--preset--color--contrast)"
							}
						}
					}
				}
			},
			"section-2": {
				"color": {
					"text": "var(--wp--preset--color--base)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--base)"
						}
					},
					"button": {
						"color": {
							"background": "var(--wp--preset--color--base)",
							"text": "var(--wp--preset--color--accent-3)"
						},
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--accent-3)",
								"text": "var(--wp--preset--color--base)"
							},
							"border": {
								"color": "var(--wp--preset--color--base)"
							}
						}
					}
				}
			},
			"section-3": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--accent-1)",
								"text": "var(--wp--preset--color--contrast)"
							},
							"border": {
								"color": "var(--wp--preset--color--contrast)"
							}
						}
					}
				}
			},
			"section-4": {
				"elements": {
					"button": {
						":hover": {
							"color": {
								"background": "var(--wp--preset--color--contrast)",
								"text": "var(--wp--preset--color--base)"
							},
							"border": {
								"color": "var(--wp--preset--color--base)"
							}
						}
					}
				}
			}
		}
	}
}
